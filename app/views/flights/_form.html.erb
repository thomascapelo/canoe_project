<div class="bg-white rounded-lg mt-4 py-4 box-border">
  <form class="flex items-center action="<%= search_results_path %> method="GET">
    <input type="text" id="departure_city" name="departure_city" placeholder="From ..." class="w-64 mx-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-400" />
    <div id="autocomplete-suggestions"></div>
    <input type="text" id="arrival_city" name="arrival_city" placeholder="To ..." class="w-64 mx-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-400" />
    <input type="date" name="departure_date" placeholder="Departure Date" class="w-64 mx-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-400" />
    <input type="date" name="return_date" placeholder="Return Date" class="w-64 mx-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-400" />
    <input type="number" name="adults" placeholder="Number of Adults" class="w-64 mx-2 border border-gray-300 rounded-md focus:outline-none focus:ring focus:border-blue-400" />
    <button type="submit" class="w-64 mx-2 h-8 bg-blue-500 text-white rounded-md hover:bg-blue-600 focus:outline-none focus:ring focus:border-blue-400">Search</button>
  </form>
</div>
