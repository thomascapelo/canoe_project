<div class="bg-white rounded-lg mx-64 my-8 py-4 px-4">
  <h2 class="text-xl font-semibold mb-4">Outbound Flight</h2>
  <% @flights.each do |flight| %>
    <div class="flight-details">
      <div class="flex">
        <p><strong><%= flight.itineraries.first.segments[0].departure['iataCode'] %></strong></p>
        <p class="ml-2">to</p>
        <p class="ml-2"><strong><%= flight.itineraries.first.segments[0].arrival['iataCode'] %></strong></p>
      </div>
      <div class="flex">
        <p>Departure: <%= flight.departure_date.strftime('%Y-%m-%d') %></p>
        <p class="ml-2">Arrival: <%= flight.arrival_date.strftime('%Y-%m-%d') %></p>
        <p class="ml-2">Flight Time: <%= flight.flight_time %></p>
        <p>Number of Adults: <%= @adults %></p>
      </div>
      <p><%= flight.price %>$</p>
    </div>
  <% end %>
</div>
